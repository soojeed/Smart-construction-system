{
  "compilerOptions": {
    "target": "ES2020",

    "module": "commonjs",
    "moduleResolution": "node",

    "rootDir": "./",
    "outDir": "dist",

    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
